<%# login %>
<div id="login" class="flex flex-col justify-between items-center h-screen bg-blue-twitter_dark">

    <!-- Login Form -->
    <div id="loginForm" class="flex lg:flex-row xl:flex-row sm:flex-col xs:flex-col md:flex-row justify-center items-center">
        <input class="input-text" type="text" placeholder="Phone, email, or username"></input>
        <div class="flex flex-col mt-5">
            <input class="input-text" type="text" placeholder="Password"></input>
            <a class="text-center text-blue-600 text-sm" href="../ForgotPassword/forgotPassword.js">Forgot password?</a>
        </div>
        <button class="btn-outlined-rounded">Log in</button>
    </div>

    <!-- SignUp Form -->
    <div id="signupForm" class="w-1/3">
        <div class="mdi mdi-twitter font-bold text-white text-6xl"></div>
        <div class="leading-10 text-white text-4xl">See what's happening in the world right now</div>
        <div class="text-white text-xl mt-10 mb-5">Join Twitter today.</div>
        <div class="flex flex-col justify-between h-16">
            <button class="btn-rounded" onclick="window.open('/signup', '_self')">Sign up</button>
            <button class="btn-outlined-rounded bg-blue-twitter_dark">Log in</button>
        </div>
    </div>

    <!-- Help Links -->
    <div id="extraLinks" class="grid lg:grid-cols-12 md:grid-cols-8 sm:grid-cols-4 xs:grid-cols-2 text-white px-10 text-center">
        <div>About</div>
        <div>Help Center</div>
        <div>Terms</div>
        <div>Privacy Policy</div>
        <div>Cookies</div>
        <div>Add info</div>
        <div>Blog</div>
        <div>Status</div>
        <div>Jobs</div>
        <div>Brand</div>
        <div>Advertise</div>
        <div>Marketing</div>
        <div>Bussinesess</div>
        <div>Developers</div>
        <div>Directory</div>
        <div>Settings</div>
        <div>@ 2020 Twitter, inc</div>
    </div>
</div>