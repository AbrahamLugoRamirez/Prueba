<div class="flex flex-col justify-center items-center h-screen">
  <div class="mdi mdi-twitter text-4xl" style="color: var(--blue)"></div>
  <div class="text-3xl font-extrabold">Recover your account</div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mt-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', class: 'input' %>
    </div>

    <div class="actions text-center mt-6">
      <%= f.submit "Send me reset password instructions", class: 'btn' %>
    </div>
  <% end %>

  <div class="mt-5 text-center font-bold text-lg">
    <%= render "devise/shared/links" %>
  </div>
</div>