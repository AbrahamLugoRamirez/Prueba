<div class="flex ">
    <div class="w-1/4 bg-blue-600	">
        <div class="w-full p-2 bg-white text-start text-3xl border-solid	border order-gray-300	sticky top-0 flex justify-center items-start h-screen	">
            <div class="grid grid-cols-1 gap-4 w-4/4 p-2 ">
                <div class="mdi mdi-twitter text-5xl  " style="color: var(--blue)"></div>
                <div class="mdi mdi-home " style="color: var(--blue)">
                    <b>Home</b>
                </div>
                <div class="mdi mdi-pound">
                    <b>Explore</b>
                </div>
                <div class="mdi mdi-bell">
                    <b>Notifications</b>
                </div>
                <div class="mdi mdi-email-newsletter">
                    <b>Messages</b>
                </div>
                <div class="mdi mdi-account ">
                    <b>Profile</b>
                </div>
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
                    Tweet
                </button>

                <%= button_to "logout", destroy_user_session_path, method: :delete, class: 'btn'  %>

            </div>
        </div>
    </div>

    <div class="w-5/12 bg-white  ">
        <div class="w-full p-2 bg-white text-start text-3xl border-solid	border order-gray-300	sticky top-0 flex justify-between ">
            <div class=""><b>Home</b></div>
            <div class="mdi mdi-star-four-points-outline" style="color: var(--blue)">
            </div>
        </div>
        <div class="container mx-auto">
            <div class="border-r  border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400  bg-white  rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
                <div class="flex items-center ">
                    <img class="w-16 h-16 rounded-full mr-4 mb-10" src="https://i.ibb.co/8YfcBSd/fotos.jpg" alt="Avatar">

                    <%= form_with(model: Tweet, local: true, :class=>"w-full") do |form|%>

                    <div class="form-group shadow-textarea in w-full">
                        <%= form.text_area :description , :class=>"bg-white focus:bg-white h-20 w-full text-3xl", :placeholder=>"What's happening?" %>
                    </div>

                    <div class="flex justify-between ">
                        <div class="mdi mdi-star-four-points-outline flex justify-start text-3xl " style="color: var(--blue)">
                            <div class="mdi mdi-image text-3xl w-10" style="color: var(--blue)"></div>
                            <div class="mdi mdi-gif text-3xl w-10" style="color: var(--blue)"></div>
                            <div class="mdi mdi-chart-bar text-3xl w-10" style="color: var(--blue)"></div>
                            <div class="mdi mdi-emoticon-happy-outline text-3xl w-10" style="color: var(--blue)"></div>
                            <div class="mdi mdi-calendar-clock text-3xl w-10" style="color: var(--blue)"></div>
                        </div>

                        <div>
                            <button form.submit "submit" class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                                Tweet
                            </button>
                        </div>
                    </div>

                    <% end %>
                </div>
                <div>

                </div>
            </div>

        </div>

        <% @tweets.each do |tweet| %>
        <div class="border-r  border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400  bg-white  rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
            <div class="flex items-center ">
                <img class="w-16 h-16 rounded-full mr-4" src="https://i.ibb.co/8YfcBSd/fotos.jpg" alt="Profile">
                <div class="h " aling="left">

                    <b><%= current_user.email %></b>

                    <p><%= tweet.description%></p>
                    <div class="flex justify-between ">
                        <div class="flex justify-start text-3xl ">
                            <div class="mdi mdi-comment text-3xl w-40" style="color: var(--darkblue)"></div>
                            <div class="mdi mdi-twitter-retweet
            text-3xl w-40" style="color: var(--darkblue)"></div>
                            <div class="mdi mdi-heart text-3xl w-40" style="color: var(--darkblue)"></div>
                            <div class="mdi mdi-share text-3xl w-40" style="color: var(--darkblue)" href="#"></div>

                        </div>

                        <div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <% end %>

    </div>

    <div class="w-2/5 bg-white  items-center flex-1 text-center">
        <div class="w-full  text-start text-3xl border-solid	border order-gray-300 top-0 flex justify-center 	">
            <div class="grid grid-cols-1 mt-2 ">
                <input class=" rounded-lg bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name" type="text" placeholder="Search Twitter">


                <div class="bg-gray-200 mt-8 border-b-2 border-gray-400 ">
                    <div class="text-left  border-b-2 border-gray-400 ">
                        <p class="ml-4"><b>Whats happening </b></p>
                    </div>


                    <div class=" border-b-2 border-gray-400 ">
                        <div class="flex mb-4 border-b-2 border-gray-400">
                            <div class="w-4/6 p-2 text-left  ">
                                <p class="text-base text-gray-600">News · Abraham Lugo Ramirez</p>
                                <p class="text-lg text-black font-black">· System engineer students of Universidad del norte</p>
                                <p class="text-lg text-black font-black">· Back-end and Front-end developer</p>
                            </div>
                            <div class="w-2/6 p-2 text-center flex justify-center">
                                <div>
                                    <img class="w-24 h-24 rounded-lg " src="https://i.ibb.co/8YfcBSd/fotos.jpg">
                                </div>
                            </div>
                        </div>

                        <div class=" border-b-2 border-gray-400 ">
                            <div class="flex mb-4 border-b-2 border-gray-400">
                                <div class="w-4/6 p-2 text-left  ">
                                    <p class="text-base text-gray-600">News · Nino Mercado Consuegra</p>
                                    <p class="text-lg text-black font-black">· System engineer students of Universidad del norte</p>
                                    <p class="text-lg text-black font-black">· Back-end and Front-end developer</p>
                                </div>
                                <div class="w-2/6 p-2 text-center flex justify-center">
                                    <div>
                                        <img class="w-25 h-24 rounded-lg " src="https://i.ibb.co/pnP84WX/me.jpg">
                                    </div>
                                </div>
                            </div>

                            <div class="max-w-sm rounded overflow-hidden shadow-lg">
                                <div class="px-6 py-4">
                                    <div class="font-bold text-xl mb-2">Twitter app</div>
                                    <p class="text-gray-700 text-base">
                                        This is a Twitter app developed in Ruby on rails
                                    </p>
                                </div>
                                <div class="px-6 pt-4 pb-2">
                                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#Twittery</span>
                                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#Ruby</span>
                                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#Rails</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>